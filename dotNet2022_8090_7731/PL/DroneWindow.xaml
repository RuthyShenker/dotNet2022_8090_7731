<Window x:Class="PL.DroneWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:BO="clr-namespace:BO;assembly=BL" 
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="DroneWindow" Height="450" Width="800">
    <Window.Resources>

        <ObjectDataProvider x:Key="WeightCategoriesEnum" MethodName="GetValues"
                            ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="BO:WeightCategories"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider x:Key="DroneStatusEnum" MethodName="GetValues"
                            ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="BO:DroneStatus"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>


        <!--<ObjectDataProvider x:Key="AvailableSlots" MethodName="AvailableSlots"
                            ObjectType="{x:Type System:Int16}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="BO:StationToList"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>-->

        <local:ConvertVisibilityByDroneStatus x:Key="ConvertVisibilityByDroneStatus"/>
        <local:ConvertContentByDroneStatus x:Key="ConvertContentByDroneStatus"/>
        <local:HasAllTextConverter x:Key="HasAllTextConverter"/>
        <local:ConvertContentByDroneStatusBelongOrPickOrDeliveryParcel x:Key="ConvertContentByDroneStatusBelongOrPickOrDeliveryParcel"/>
        <local:ConvertVisibilityByDroneToBelongOrPickOrArrivalParcel x:Key="ConvertVisibilityByDroneToBelongOrPickOrArrivalParcel"/>
    </Window.Resources>

    <StackPanel>

        <StackPanel x:Name="AddingDrone">

            <TextBlock  Text = "Drone Id:" />
            <TextBox Name = "IdAddingTextBox" PreviewTextInput="TextBox_OnPreviewTextInput" Text = "{Binding Path=Id, UpdateSourceTrigger=PropertyChanged}" IsEnabled="True"/>

            <TextBlock Text = "MaxWeight:" />
            <ComboBox x:Name = "ChooseMaxWeight" ItemsSource="{Binding }" Text="Choose max weight" IsEditable="True" IsReadOnly="True" />

            <TextBlock  Text = "Model:" />
            <TextBox x:Name = "ModelAddingTextBox"  PreviewTextInput="TextBox_OnPreviewTextInput" Text = "{Binding Path=Model, UpdateSourceTrigger=PropertyChanged}" IsEnabled="True" />

            <TextBlock  Text = "Station Id:" TextWrapping = "Wrap" />
            <ComboBox x:Name = "StationIdComboBox" ItemsSource="{Binding}" Text="Choose station Id to charge in" IsEditable="True" IsReadOnly="True" />

            <Button x:Name="OkAdd" Content = "OK" Click = "Button_Click_Ok_Adding_New_Drone">
                <Button.IsEnabled>
                    <MultiBinding Converter="{StaticResource HasAllTextConverter}">
                        <Binding ElementName="StationIdComboBox" Path="SelectedItem" />
                        <Binding ElementName="ChooseMaxWeight" Path="SelectedItem" />
                        <Binding ElementName="IdAddingTextBox" Path="Text" />
                        <Binding ElementName="ModelAddingTextBox" Path="Text" />
                    </MultiBinding>
                </Button.IsEnabled>
            </Button>
        </StackPanel>

        <StackPanel>

            <StackPanel x:Name="DroneDetails">

                <TextBlock  Text = "Drone Id:" />
                <TextBox Name = "IdTextBox" PreviewTextInput="TextBox_OnPreviewTextInput" Text = "{Binding Path=Id, UpdateSourceTrigger=PropertyChanged}" IsEnabled="True"/>

                <StackPanel x:Name="BatteryContainer">
                    <TextBlock  Text = "Battery:" />
                    <TextBox x:Name = "BatteryTextBox"  Text = "{Binding Path=BatteryStatus}" IsEnabled="False" />
                </StackPanel>

                <TextBlock Text = "MaxWeight:" />
                <ComboBox x:Name = "MaxWeightComboBox" ItemsSource="{Binding Source={StaticResource WeightCategoriesEnum}}" SelectedItem="{Binding Path=Weight}"  Height = "25" Width = "140"  IsEnabled="True" />

                <TextBlock  Text = "Model:" />
                <TextBox x:Name = "ModelTextBox"  PreviewTextInput="TextBox_OnPreviewTextInput" Text = "{Binding Path=Model, UpdateSourceTrigger=PropertyChanged}" IsEnabled="True" />

                <StackPanel x:Name="StatusContainer">
                    <TextBlock  Text = "Status:" />
                    <ComboBox x:Name = "StatusComboBox"   ItemsSource="{Binding Source={StaticResource DroneStatusEnum}}" SelectedItem="{Binding Path=DroneStatus}" Height = "25" Width = "140"  IsEnabled="True"/>
                </StackPanel>

                <StackPanel x:Name="DeliveryContainer">
                    <TextBlock  Text = "Deliery:" TextWrapping = "Wrap" />
                    <ComboBox x:Name = "DeliveryComboBox" ItemsSource="{Binding Source={StaticResource AvailableSlots}, Path=Name}"  />

                </StackPanel>

                <StackPanel x:Name="Location">
                    <TextBlock  Text = "Longitude:" TextWrapping = "Wrap" />
                    <TextBox x:Name = "LongitudeTextBox" PreviewTextInput="TextBox_OnPreviewTextInput" Text = "{Binding Path=CurrLocation.Longitude, UpdateSourceTrigger=PropertyChanged}" IsEnabled="True" />

                    <TextBlock  Text = "Latitude:" TextWrapping = "Wrap" />
                    <TextBox x:Name = "LatitudeTextBox" PreviewTextInput="TextBox_OnPreviewTextInput" Text = "{Binding Path=CurrLocation.Latitude, UpdateSourceTrigger=PropertyChanged}" IsEnabled="True"/>
                </StackPanel>


                <Expander Header="Parcel in transfer">
                    <StackPanel x:Name="PInTransfer">
                        <TextBlock x:Name="PInTransferPId" Text = "PInTransfer.PId" IsEnabled="True" TextWrapping="Wrap"/>
                        <TextBox x:Name="PInTransferPIdTextBox" Text = "{Binding Path=PInTransfer.PId, UpdateSourceTrigger=PropertyChanged}" IsEnabled="True" TextWrapping="Wrap"/>

                        <TextBlock x:Name="PInTransferIsInWay" Text = "PInTransfer.IsInWay" IsEnabled="True" TextWrapping="Wrap"/>
                        <TextBox x:Name="PInTransferIsInWayTextBox" Text = "{Binding Path=PInTransfer.IsInWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="True" TextWrapping="Wrap"/>

                        <TextBlock x:Name="PInTransferMPriority" Text = "PInTransfer.MPriority" IsEnabled="True" TextWrapping="Wrap"/>
                        <TextBox x:Name="PInTransferMPriorityTextBox" Text = "{Binding Path=PInTransfer.MPriority, UpdateSourceTrigger=PropertyChanged}" IsEnabled="True" TextWrapping="Wrap"/>

                        <TextBlock x:Name="PInTransferWeight" Text = "PInTransfer.Weight" IsEnabled="True" TextWrapping="Wrap"/>
                        <TextBox x:Name="PInTransferWeightTextBox" Text = "{Binding Path=PInTransfer.Weight, UpdateSourceTrigger=PropertyChanged}" IsEnabled="True" TextWrapping="Wrap"/>

                        <Expander x:Name="ParInTransferSender" >
                            <StackPanel x:Name="PInTransferSenderTextBox">
                                <TextBlock  Text = "Id:" TextWrapping = "Wrap"/>
                                <TextBox x:Name="PInTransferSenderId" Text = "{Binding Path=PInTransfer.Sender.Id, UpdateSourceTrigger=PropertyChanged}" IsEnabled="True" TextWrapping="Wrap"/>

                                <TextBlock  Text = "Name:" TextWrapping = "Wrap" />
                                <TextBox x:Name="PInTransferSenderName" Text = "{Binding Path=PInTransfer.Sender.Name, UpdateSourceTrigger=PropertyChanged}" IsEnabled="True" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Expander>

                        <Expander x:Name="ParInTransferGetter" >
                            <StackPanel  x:Name="PInTransferGetterTextBox">
                                <TextBlock  Text = "Id:" TextWrapping = "Wrap"/>
                                <TextBox x:Name="PInTransferGetterIdTextBox" Text = "{Binding Path=PInTransfer.Getter.Id, UpdateSourceTrigger=PropertyChanged}" IsEnabled="True" TextWrapping="Wrap"/>

                                <TextBlock  Text = "Name:" TextWrapping = "Wrap" />
                                <TextBox x:Name="PInTransferGetterNameTextBox" Text = "{Binding Path=PInTransfer.Getter.Name, UpdateSourceTrigger=PropertyChanged}" IsEnabled="True" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Expander>


                        <Expander Header="Parcel In Transfer Collection Location">
                            <StackPanel x:Name="PInTransferCollectionLocation">
                                <TextBlock  Text = "Longitude:" TextWrapping = "Wrap" />
                                <TextBox x:Name = "PInTransferCollectionLongitudeLocationTextBox" PreviewTextInput="TextBox_OnPreviewTextInput" Text = "{Binding Path=PInTransfer.CollectionLocation.Longitude, UpdateSourceTrigger=PropertyChanged}" IsEnabled="True"  TextWrapping="Wrap"/>

                                <TextBlock  Text = "Latitude:" TextWrapping = "Wrap" />
                                <TextBox x:Name = "PInTransferCollectionLatitudeLocationTextBox" PreviewTextInput="TextBox_OnPreviewTextInput" Text = "{Binding Path=PInTransfer.CollectionLocation.Latitude, UpdateSourceTrigger=PropertyChanged}" IsEnabled="True" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Expander>


                        <Expander Header="Parcel In Transfer Delivery Location">
                            <StackPanel x:Name="PInTransferDeliveryLocation">
                                <TextBlock  Text = "Longitude:" TextWrapping = "Wrap" />
                                <TextBox x:Name = "PInTransferDeliveryLocationLongitudeLocationTextBox" PreviewTextInput="TextBox_OnPreviewTextInput" Text = "{Binding Path=PInTransfer.CollectionLocation.Longitude, UpdateSourceTrigger=PropertyChanged}" IsEnabled="True" TextWrapping="Wrap"/>

                                <TextBlock  Text = "Latitude:" TextWrapping = "Wrap" />
                                <TextBox x:Name = "PInTransferDeliveryLocationLatitudeLocationTextBox" PreviewTextInput="TextBox_OnPreviewTextInput" Text = "{Binding Path=PInTransfer.CollectionLocation.Latitude, UpdateSourceTrigger=PropertyChanged}" IsEnabled="True" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Expander>
                        <TextBlock  Text = "TransDistance:" TextWrapping = "Wrap" ></TextBlock>
                        <TextBox x:Name="PInTransferTransDistanceTextBox" Text = "{Binding Path=PInTransfer.TransDistance, UpdateSourceTrigger=PropertyChanged}" IsEnabled="True"/>
                    </StackPanel>
                </Expander>

                <Button x:Name="UpdateModel" Content = "Update Model:" Click = "Update_Model_Click"  />
                <Button x:Name="SendOrReleaseDroneFromCharging" 
                   Visibility="{Binding Path=DroneStatus ,Converter={StaticResource ConvertVisibilityByDroneStatus}}"  Height="50"
                   Content="{Binding Path=DroneStatus ,Converter={StaticResource ConvertContentByDroneStatus}}" Click = "Send_Or_Release_Drone_From_Charging" />

            <Button x:Name="SendOrPickOrArrivalDrone"   Click = "Send_Or_pick_Or_Arrival_Drone_Click"
                    Visibility="{Binding  Converter={StaticResource ConvertVisibilityByDroneToBelongOrPickOrArrivalParcel }}" 
                    Content="{Binding  Converter={StaticResource ConvertContentByDroneStatusBelongOrPickOrDeliveryParcel}}"
                    Height="50"/>

                <StackPanel x:Name="message">
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Window>

