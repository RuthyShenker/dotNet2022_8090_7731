<Window x:Class="PL.DroneWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:BO="clr-namespace:BO;assembly=BL" 
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="DroneWindow" Height="450" Width="800">
    <Window.Resources>

        <ObjectDataProvider x:Key="WeightCategoriesEnum" MethodName="GetValues"
                            ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="BO:WeightCategories"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider x:Key="DroneStatusEnum" MethodName="GetValues"
                            ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="BO:DroneStatus"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <local:ConvertVisibilityByDroneStatus x:Key="ConvertVisibilityByDroneStatus"/>
        <local:ConvertContentByDroneStatus x:Key="ConvertContentByDroneStatus"/>
        <local:HasAllTextConverter x:Key="HasAllTextConverter"/>

    </Window.Resources>

    <StackPanel>

        <StackPanel x:Name="DroneDetails">

            <TextBlock  Text = "Drone Id:" />
            <TextBox Name = "IdTextBox" PreviewTextInput="TextBox_OnPreviewTextInput" Text = "{Binding Path=Id, UpdateSourceTrigger=PropertyChanged}" IsEnabled="True"/>

            <TextBlock  Text = "Battery:" />
            <TextBox x:Name = "BatteryTextBox"  Text = "{Binding Path=BatteryStatus}" IsEnabled="False" />

            <TextBlock Text = "MaxWeight:" />
            <ComboBox x:Name = "MaxWeightComboBox" ItemsSource="{Binding Source={StaticResource WeightCategoriesEnum}}" SelectedItem="{Binding Path=Weight}"  Height = "25" Width = "140"  IsEnabled="True" />

            <TextBlock  Text = "Model:" />
            <TextBox x:Name = "ModelTextBox"  PreviewTextInput="TextBox_OnPreviewTextInput" Text = "{Binding Path=Model, UpdateSourceTrigger=PropertyChanged}" IsEnabled="True" />

            <TextBlock  Text = "Status:" />
            <ComboBox x:Name = "StatusComboBox" ItemsSource="{Binding Source={StaticResource DroneStatusEnum}}" SelectedItem="{Binding Path=DStatus}" Height = "25" Width = "140"  IsEnabled="True"/>

            <TextBlock  Text = "Deliery:" TextWrapping = "Wrap" />
            <TextBox x:Name = "DeliveryTextBox" PreviewTextInput="TextBox_OnPreviewTextInput" Text = "{Binding Path=DeliveredParcelId, UpdateSourceTrigger=PropertyChanged}"  IsEnabled="True" />

            <StackPanel x:Name="Location" <!--Visibility="{Binding Path=}"-->>
                
            <TextBlock  Text = "Latitude:" TextWrapping = "Wrap" />
            <TextBox x:Name = "LatitudeTextBox" PreviewTextInput="TextBox_OnPreviewTextInput" Text = "{Binding Path=CurrLocation.Latitude, UpdateSourceTrigger=PropertyChanged}" IsEnabled="True"/>
            </StackPanel>

            <TextBlock  Text = "Longitude:" TextWrapping = "Wrap" />
            <TextBox x:Name = "LongitudeTextBox" PreviewTextInput="TextBox_OnPreviewTextInput" Text = "{Binding Path=CurrLocation.Longitude, UpdateSourceTrigger=PropertyChanged}" IsEnabled="True" />

            <Button x:Name="OkAdd" Content = "OK" Click = "Button_Click_Of_Adding_New_Drone">
                <Button.IsEnabled>
                    <MultiBinding Converter="{StaticResource HasAllTextConverter}">
                        <Binding ElementName="IdTextBox" Path="Text" />
                        <Binding ElementName="ModelTextBox" Path="Text" />
                    </MultiBinding>
                </Button.IsEnabled>
            </Button>

            <Button x:Name="UpdateModel" Content = "Update Model:" Click = "Update_Model_Click"  />
            <Button x:Name="SendOrReleaseDroneFromCharging" 
                   Visibility="{Binding Path=DStatus ,Converter={StaticResource ConvertVisibilityByDroneStatus}}"  Height="50"
                   Content="{Binding Path=DStatus ,Converter={StaticResource ConvertContentByDroneStatus}}" Click = "Send_Or_Release_Drone_From_Charging" />

            <Button x:Name="SendOrPickOrArrivalDrone" Content =""  Click = "Send_Or_pick_Or_Arrival_Drone_Click"  />

            <StackPanel x:Name="message">
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Window>

