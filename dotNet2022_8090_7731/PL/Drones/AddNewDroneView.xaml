<UserControl x:Class="PL.Drones.AddNewDroneView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:BO="clr-namespace:BO;assembly=BL"
             xmlns:Converters="clr-namespace:PL.Converters"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:PL.Drones"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>

        <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Style.Setters>
                <Setter Property="VerticalAlignment" Value="Top"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
                <Setter Property="MaxLength" Value="10"/>
                <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            </Style.Setters>
            
        </Style>

        <Style TargetType="ComboBox"   BasedOn="{StaticResource MaterialDesignOutlinedComboBox}">
        </Style>
               

        <ObjectDataProvider x:Key="WeightCategoriesEnum" MethodName="GetValues"
                            ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="BO:WeightCategories"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
      
        <Converters:HasAllTextConverter x:Key="HasAllTextConverter"/>
    </UserControl.Resources>
    <StackPanel x:Name="AddNewDronePanel">

        
        <TextBlock  Text = "Drone Id:" />
        <TextBox Name = "IdAddingTextBox" 
                 materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"  
                 materialDesign:HintAssist.Hint="Id"
                 PreviewTextInput="TextBox_OnPreviewTextInput" 
                 Text = "{Binding Path=Id, UpdateSourceTrigger=PropertyChanged}"
                 IsEnabled="True"/>

        <TextBlock Text = "MaxWeight:" />
        <ComboBox x:Name = "ChooseMaxWeight" 
                  ItemsSource="{Binding Source={StaticResource  WeightCategoriesEnum}}" 
                  materialDesign:HintAssist.Hint="Choose max Weight"/>

        <TextBlock  Text = "Model:" />
        <TextBox x:Name = "ModelAddingTextBox"  
                  materialDesign:TextFieldAssist.CharacterCounterVisibility="Collapsed"  
                 materialDesign:HintAssist.Hint="Model"
                 PreviewTextInput="TextBox_OnPreviewTextInput" 
                 Text = "{Binding Path=Model, UpdateSourceTrigger=PropertyChanged}"
                 IsEnabled="True" />

        <TextBlock Text = "Station Id:" TextWrapping = "Wrap" />
            <ComboBox x:Name = "StationIdComboBox"
                  ItemsSource="{Binding}" 
                  materialDesign:HintAssist.Hint="Choose station Id to charge in"/>


        <Button x:Name="OkAdd" Content = "OK" Click = "Button_Click_Ok_Adding_New_Drone">
            <Button.IsEnabled>
                <MultiBinding Converter="{StaticResource HasAllTextConverter}">
                    <Binding ElementName="StationIdComboBox" Path="SelectedItem" />
                    <Binding ElementName="ChooseMaxWeight" Path="SelectedItem" />
                    <Binding ElementName="IdAddingTextBox" Path="Text" />
                    <Binding ElementName="ModelAddingTextBox" Path="Text" />
                </MultiBinding>
            </Button.IsEnabled>
        </Button>
        <Button Content="X" Click="Close_Window_Click"></Button>
    </StackPanel>
</UserControl>
