<Window x:Class="PL.View.StationListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.View"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors" xmlns:local1="clr-namespace:PL.ViewModels"
        mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    
    <StackPanel Orientation="Vertical">

        <ComboBox x:Name="AvailablePositionsList" ItemsSource="{Binding AvailablePositionsList}" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <i:InvokeCommandAction 
                        Command="{Binding FilterListCommand}"
                        CommandParameter="{Binding ElementName=AvailablePositionsList, Path=SelectedItem}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </ComboBox>

        <ListView x:Name="StationList" ItemsSource="{Binding StationList, Mode=TwoWay ,IsAsync=True}" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDoubleClick">
                    <i:InvokeCommandAction 
                        Command="{Binding ShowStationCommand}"
                        CommandParameter="{Binding ElementName=StationList, Path=SelectedItem}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </ListView>
        
        <Button Content="Add Station:"
                Command="{Binding AddStationCommand}"
                Style="{StaticResource MaterialDesignFlatButton}"
                HorizontalAlignment="Center"/>

        <Button Content="Close" 
                Command="{Binding CloseWindowCommand }" 
                CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}}"
                Style="{StaticResource MaterialDesignFlatButton}"
                HorizontalAlignment="Center"/>

    </StackPanel>
</Window>
