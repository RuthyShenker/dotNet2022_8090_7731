<Window x:Class="PL.View.ParcelListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        xmlns:BO="clr-namespace:BO;assembly=BL"  
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        Title="ParcelListView" Height="450" Width="800">
    <Window.Resources>
        <ObjectDataProvider x:Key="ParcelStatusEnum" MethodName="GetValues" 
                            ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="BO:ParcelStatus"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

    </Window.Resources>
    <StackPanel Orientation="Vertical">
        <ComboBox ItemsSource="{Binding Source={StaticResource ParcelStatusEnum}}" 
                  SelectedItem="{Binding ParcelStatusSelected}" />

        <StackPanel>
            <TextBlock Text="Filter"/>
            <StackPanel>
                <DockPanel>
                    <TextBlock Text="Created After"/>
                    <DatePicker x:Name="click" 
                        Width="120"
                        FlowDirection="RightToLeft"
                        materialDesign:HintAssist.Hint="Choose Date"/>
                </DockPanel>

                <DockPanel>
                    <TextBlock Text="Created Before"/>
                    <DatePicker
                       Width="120"
                       FlowDirection="RightToLeft"
                       materialDesign:HintAssist.Hint="Choose Date" />
                </DockPanel>
            </StackPanel>
        </StackPanel>

        <ComboBox ItemsSource="{Binding GroupOptions }"
                  SelectedItem="{Binding GroupBy}" />
        
        <ListView x:Name="ParcelList" ItemsSource="{Binding ParcelList}"  >
            <!--SelectedItem="{Binding SelectedDisplayItem, Mode=TwoWay}"-->
            <!--ItemTemplate="{StaticResource SelectedDisplayItemTemplate}"-->
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDoubleClick">
                    <i:InvokeCommandAction 
                        Command="{Binding MouseDoubleCommand}"
                        CommandParameter="{Binding ElementName=ParcelList, Path=SelectedItem}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <!--<ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock FontWeight="Bold" FontSize="14" Text="{Binding Name}"/>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ListView.GroupStyle>-->
        </ListView>

        <!--<ListView ItemsSource="{Binding ParcelListBySender}"  >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0"
                                   Text="{Binding Key}"/>
                        <ListView Grid.Row="1" 
                                  x:Name="ParcelListBySender" 
                                  ItemsSource="{Binding Value}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseDoubleClick">
                                    <i:InvokeCommandAction 
                        Command="{Binding MouseDoubleCommand}"
                        CommandParameter="{Binding ElementName=ParcelListBySender, Path=SelectedItem}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </ListView>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>-->
        <Button Content="ADD" Command="{Binding AddParcelCommand}"
                    Style="{StaticResource MaterialDesignFlatButton}"
                HorizontalAlignment="Center"/>

        <Button x:Name="close_window" Content="Close:" 
                Command="{Binding CloseWindowCommand }" 
                CommandParameter="{Binding ElementName=close_window}"
                    Style="{StaticResource MaterialDesignFlatButton}"
                HorizontalAlignment="Center"/>
    </StackPanel>

</Window>
