            <Label>
                Group:
            </Label>
            <ComboBox ItemsSource="{Binding GroupOptions }"
                  SelectedItem="{Binding GroupBy}" VerticalAlignment="Top" HorizontalContentAlignment="Left"
                      HorizontalAlignment="Left"  MaxWidth="120" MaxHeight="60" MinHeight="40" MinWidth="100"  />

            <ListView x:Name="ParcelList" ItemsSource="{Binding ParcelList}"  >
                <!--SelectedItem="{Binding SelectedDisplayItem, Mode=TwoWay}"-->
                <!--ItemTemplate="{StaticResource SelectedDisplayItemTemplate}"-->
                <ListView.View>
                    





                    <GridView>
                        <GridViewColumn
        DisplayMemberBinding="{Binding Id}"
        Header="Id" />
                        <GridViewColumn
        DisplayMemberBinding="{Binding SenderName}"
        Header="SenderName" />
                        <GridViewColumn
        DisplayMemberBinding="{Binding GetterName}"
        Header="GetterName" />
                        <GridViewColumn
        DisplayMemberBinding="{Binding Weight}"
        Header="Weight" />
                        <GridViewColumn
        DisplayMemberBinding="{Binding MyPriority}"
        Header="MyPriority" />
                        <GridViewColumn
        DisplayMemberBinding="{Binding Status}"
        Header="Status" />

                    </GridView>
                </ListView.View>
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseDoubleClick">
                        <i:InvokeCommandAction 
                        Command="{Binding MouseDoubleCommand}"
                        CommandParameter="{Binding ElementName=ParcelList, Path=SelectedItem}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
