        <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>

    </Window.Resources>
    <ScrollViewer>
        <StackPanel Orientation="Vertical" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <TextBlock Text="Filter:"/>
            <ComboBox ItemsSource="{Binding FilterParcelOptions}" 
                  SelectedItem="{Binding FilterParcels}" VerticalAlignment="Top" HorizontalContentAlignment="Left"
                      HorizontalAlignment="Left"  MaxWidth="120" MaxHeight="60" MinHeight="40" MinWidth="100" />

            <!--<StackPanel>
