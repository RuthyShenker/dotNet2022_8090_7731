                   Content="{Binding Path=DroneStatus ,Converter={StaticResource ContentByDroneStatusConverter}}" Click = "Send_Or_Release_Drone_From_Charging" />

        <Button x:Name="SendOrPickOrArrivalDrone"   Click = "Send_Or_pick_Or_Arrival_Drone_Click"
                    Visibility="{Binding  Converter={StaticResource VisibilityByDroneToBelongOrPickOrArrivalParcelConverter }}" 
                    Content="{Binding  Converter={StaticResource ContentByDroneStatusBelongOrPickOrDeliveryParcelConverter}}"
                    Height="50"/>-->
